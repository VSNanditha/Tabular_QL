reset
set term postscript enhanced landscape color "Arial" 28
# set output "/Users/nandithavittanala/virenv/tabularQL/curve_plotters/learning_rewards.eps"
unset key
bm = 0.18
lm = 0.15
rm = 0.95
gap = 0.03
size = 0.95
y1 = -5.0; y2 = 5.0; y3 = 10.0; y4 = 30.0
set multiplot
set xlabel 'Training Episodes'
set border 1+2+8
set xtics nomirror
